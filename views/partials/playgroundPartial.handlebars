<!doctype html>

<div class="timeline" style="height:132px"></div>
<div class="stamp">8<span>:</span>07<span>:</span>52 AM</div>
<div class="timeline" style="height:7px"></div>
<div class="appContainer">
  <a><img src="/images/icons/gmail.png" class="app" data-toggle="modal" data-target="#gmail" data-backdrop="true" data-keyboard="true"></a>
  <p class="appName">Gmail</p>
</div>



<!-- Modal -->
<div id="gmail" class="modal fade gmail" role="dialog"  tabindex='-1'>
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">

      <div class="modal-body">

        <img src="/images/gmail-header.jpg" class="fitInModal disable-mouse">

        <!-- <img src="/images/p1gmail-1.jpg" class="fitInModal clickable" data-toggle="collapse" data-target="#inbox1"> -->


        <div class="clickable gmailButton firedEmail" data-toggle="collapse" data-target="#inbox1">
            <hr>
            <div class="gmail-flex-container">
                <div class="gmail-checkbox"><input type="checkbox" value=""></div>

                <div class="gmail-flex-item gmailHeader" style="text-align: left" id="firedHeader">ZenTech Termination Notice</div>
                <div class="gmail-flex-item-right gmailTime">7:49 am</div>  
            </div>  
            <div class="gmail-flex-container">
                <div class="gmail-flex-item gmailSubtext">Hello Walter, As discussed last Friday, this email confirms...</div>
                <div class="gmail-flex-item-right gmailHeart"><i class="fa fa-star-o" aria-hidden="true"></i></div> 
            </div>  
            <hr/>
        </div>

        

        <div id="inbox1" class="collapse">
            <div class="gmailBody">
                {{>gmailFired}}

            </div>
        </div>                                   

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="page2_2" value="true">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function(){
    unBold();
});

function unBold() {
    $(".firedEmail").click(function() {
        $('#firedHeader').addClass('removeBold');
        unBold();
    }); 

}

</script>

